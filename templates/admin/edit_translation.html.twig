{% extends "admin_layout.html.twig" %}

{% block title %}Translation{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-8">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Translation</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="form-group">
                        <label for="fileName">En</label>
                        <input type="text" class="form-control" id="fileName" placeholder="En">
                    </div>
                    <div class="form-group">
                        <label for="fileName">Ua</label>
                        <input type="text" class="form-control" id="fileName" placeholder="Ua">
                    </div>
                    <div class="form-group">
                        <label for="fileName">De</label>
                        <input type="text" class="form-control" id="fileName" placeholder="De">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Actions</h3>
                </div>
                <div class="box-body form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Created</label>

                        <div class="col-sm-9 pull-right">
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control pull-right" id="datepicker">
                            </div>
                        </div>
                        <!-- /.input group -->
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Updated</label>

                        <div class="col-sm-9 pull-right">
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control pull-right" id="datepicker">
                            </div>
                        </div>
                        <!-- /.input group -->
                    </div>

                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <button class="btn btn-primary btn-block">Save</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}