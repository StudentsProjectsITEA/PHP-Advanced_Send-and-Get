{% extends "admin_layout.html.twig" %}

{% block title %}Config{% endblock %}

{% block content %}
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Config</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal">
            <div class="box-body">
                <div class="form-group">
                    <label for="inputStorageLimit" class="col-sm-2 control-label">Storage limit (Mb)</label>
                    <div class="col-sm-10">
                        <input type="number" step="100" min="0" class="form-control" id="inputStorageLimit" placeholder="0MB">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputStorageLimit" class="col-sm-2 control-label">Facebook link</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputStorageLimit" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputStorageLimit" class="col-sm-2 control-label">Twitter link</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputStorageLimit" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputStorageLimit" class="col-sm-2 control-label">Google plus link</label>
                    <div class="col-sm-10">
                        <input type="text"  class="form-control" id="inputStorageLimit" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputStorageLimit" class="col-sm-2 control-label">Admin Mail</label>
                    <div class="col-sm-10">
                        <input type="text"  class="form-control" id="inputStorageLimit" placeholder="">
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-info pull-right">Save</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
{% endblock %}